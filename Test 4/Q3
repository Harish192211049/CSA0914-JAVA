public class SumOfNumbers {
    public static void main(String[] args) {
        int sum = 0;

        // Loop from 0 to 1000 and add each number to sum
        for (int i = 0; i <= 1000; i++) {
            sum += i;
        }

        // Display the result
        System.out.println("The sum of numbers from 0 to 1000 is: " + sum);
    }
}
