public class StringDemo {

    public static void main(String[] args) {
        
        // String constructors
        String str1 = new String(); // Empty string
        String str2 = new String("Hello");
        char[] charArray = {'W', 'o', 'r', 'l', 'd'};
        String str3 = new String(charArray);
        byte[] byteArray = {65, 66, 67, 68};
        String str4 = new String(byteArray);
        
        System.out.println("String Constructors:");
        System.out.println("Empty String: " + str1);
        System.out.println("String from literal: " + str2);
        System.out.println("String from char array: " + str3);
        System.out.println("String from byte array: " + str4);
        
        // String methods
        String sample = "Hello World";
        
        System.out.println("\nString Methods:");
        System.out.println("Length of String: " + sample.length());
        System.out.println("Character at index 1: " + sample.charAt(1));
        System.out.println("Substring from index 6: " + sample.substring(6));
        System.out.println("Substring from index 0 to 5: " + sample.substring(0, 5));
        System.out.println("Uppercase: " + sample.toUpperCase());
        System.out.println("Lowercase: " + sample.toLowerCase());
        System.out.println("Index of 'W': " + sample.indexOf('W'));
        System.out.println("Replace 'World' with 'Java': " + sample.replace("World", "Java"));
        System.out.println("Trimmed String: " + sample.trim());
        System.out.println("Starts with 'Hello': " + sample.startsWith("Hello"));
        System.out.println("Ends with 'World': " + sample.endsWith("World"));
    }
}
